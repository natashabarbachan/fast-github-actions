			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// SETUP",
							"const { code, status } = pm.response;",
							"const jsonData = pm.response.json();",
							"const personagem = jsonData.data[0]; // Aqui seleciono o primeiro objeto do array contido em pm.response.json().data",
							"",
							"// TESTS",
							"pm.test(\"Status code retornado é 200\", function () {",
							"    pm.expect(code).to.eql(200);",
							"});",
							"",
							"pm.test('Status retornado é OK', function () {",
							"    pm.expect(status).to.eql('OK');",
							"});",
							"",
							"pm.test('Nome retornado é Donald Duck', function () {",
							"    pm.expect(personagem.name).to.eql('Donald Duck');",
							"});",
							"",
							"pm.test('Filme \"Pinocchio (2022 film)\" está incluso na lista de filmes', function () {",
							"    pm.expect(personagem.films).to.include(\"Pinocchio (2022 film)\");",
							"});",
							"",
							"pm.test('Enemies está vazio', function () {",
							"    pm.expect(personagem.enemies).to.be.an('array').that.is.empty;",
							"});"
						],
